{
    "name": "Pixel Mod",
    "description": "Pixel mod for Opera GX",
    "developer":
    {
        "name": "Bak David"
    },
    "icons":
    {
        "512": "icon_512.png"
    },
    "manifest_version": 3,
    "mod":
    {
        "license": "license.txt",
        "payload":
        {
            "background_music":
            [
                "music/track_1.mp3",
                "music/track_2.mp3",
                "music/track_3.mp3",
                "music/track_4.mp3"
            ],
            "browser_sounds":
            {
                "CLICK":
                [
                    "sound/click.wav"
                ],
                "FEATURE_SWITCH_OFF":
                [
                    "sound/switch_off.wav"
                ],
                "FEATURE_SWITCH_ON":
                [
                    "sound/switch_on.wav"
                ],
                "HOVER":
                [
                    "sound/click.wav"
                ],
                "HOVER_UP":
                [
                    "sound/click.wav"
                ],
                "IMPORTANT_CLICK":
                [
                    "sound/click.wav"
                ],
                "LEVEL_UPGRADE":
                [
                    "sound/level_up.wav"
                ],
                "LIMITER_OFF":
                [
                    "sound/switch_off.wav"
                ],
                "LIMITER_ON":
                [
                    "sound/switch_on.wav"
                ],
                "SWITCH_TOGGLE":
                [
                    "sound/switch_toggle.wav"
                ],
                "TAB_CLOSE":
                [
                    "sound/tab_close.wav"
                ],
                "TAB_INSERT":
                [
                    "sound/tab_insert.wav"
                ],
                "TAB_SLASH":
                [
                    "sound/tab_slash.wav"
                ]
            },
            "keyboard_sounds":
            {
                "TYPING_BACKSPACE":
                [
                    "keyboard/backspace.wav"
                ],
                "TYPING_ENTER":
                [
                    "keyboard/enter.wav"
                ],
                "TYPING_LETTER":
                [
                    "keyboard/letter_1.wav",
                    "keyboard/letter_2.wav",
                    "keyboard/letter_3.wav"
                ],
                "TYPING_SPACE":
                [
                    "keyboard/space.wav"
                ]
            },
            "page_styles":
            [
                {
                    "css":
                    [
                        "webmodding/opera.css"
                    ],
                    "matches":
                    [
                        "https://*.opera.com/*"
                    ]
                }
            ],
            "shaders":
            {
                "Matrix green":
                {
                    "path": "shader/matrix.txt"
                },
                "Wave":
                {
                    "animation":
                    {
                        "duration": 60,
                        "steps": 3600
                    },
                    "path": "shader/wave.txt"
                }
            },
            "theme":
            {
                "dark":
                {
                    "gx_accent":
                    {
                        "h": 131,
                        "s": 96,
                        "l": 55
                    },
                    "gx_secondary_base":
                    {
                        "h": 162,
                        "s": 38,
                        "l": 16
                    }
                },
                "light":
                {
                    "gx_accent":
                    {
                        "h": 139,
                        "s": 63,
                        "l": 24
                    },
                    "gx_secondary_base":
                    {
                        "h": 122,
                        "s": 81,
                        "l": 88
                    }
                }
            },
            "wallpaper":
            {
                "dark":
                {   
                    "image": "wallpaper/dark.png",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#757575"
                },
                "light":
                {
                    "image": "wallpaper/video.webm",
                    "first_frame": "wallpaper/first_frame.jpeg",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#0B000E"
                }
            }
        },
        "schema_version": 1
    },
    "version": "1.0"
}
